<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_movement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.scm.subodhyadav.teachneedy.MovementActivity"
    tools:showIn="@layout/app_bar_movement">


    <Button
        android:text="Join Fellowship"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:id="@+id/b_fellow" />

    <Button
        android:text="Donate"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:id="@+id/b_donate"
        android:layout_below="@+id/b_fellow"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
